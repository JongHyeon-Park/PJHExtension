<?xml version="1.0" encoding="utf-8"?>
<com.siwonschool.ui.draggablepanel.DraggableView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:draggable_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draggable_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    draggable_view:bottom_view_id="@+id/second_view"
    draggable_view:top_view_id="@+id/drag_view">

    <FrameLayout
        android:id="@+id/second_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/drag_view"
        android:background="@android:color/white" />

    <FrameLayout
        android:id="@+id/drag_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

</com.siwonschool.ui.draggablepanel.DraggableView>