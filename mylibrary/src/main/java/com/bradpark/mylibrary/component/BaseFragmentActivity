open class BaseFragmentActivity<T : ViewDataBinding>: FragmentActivity() {

    private var mDataBinding: T? = null
    var mApplication: WagerApplication? = null

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)

        mApplication = application as WagerApplication
    }
    override fun onDestroy() {
        super.onDestroy()
        mDataBinding?.unbind()
    }

    protected fun setDataBinding(activity: Activity, @LayoutRes layoutRes: Int) {
        this.mDataBinding = DataBindingUtil.setContentView(activity, layoutRes)
    }

    protected fun getDataBinding(): T? {
        return mDataBinding
    }
}