<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" /> <!-- border color -->
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:top="2dp"
        android:right="2dp"
        android:left="2dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />  <!-- background color -->
        </shape>
    </item>
</layer-list>