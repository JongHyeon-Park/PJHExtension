<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/cl_snack_layout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingBottom="16dp">
      <ImageView
          android:id="@+id/iv_snack_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@id/tv_snack_title"
          app:layout_constraintBottom_toBottomOf="@id/tv_snack_title"/>
      <TextView
          android:id="@+id/tv_snack_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:textSize="16dp"
          android:textColor="@color/colorWhite"
          app:layout_constraintStart_toEndOf="@id/iv_snack_view"
          app:layout_constraintTop_toTopOf="parent"/>
      <TextView
          android:id="@+id/tv_snack_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14dp"
          android:textColor="@color/colorWhite"
          app:layout_constraintStart_toStartOf="@id/tv_snack_title"
          app:layout_constraintTop_toBottomOf="@id/tv_snack_title"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>