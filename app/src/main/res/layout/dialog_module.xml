<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_cube_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="143dp"
        android:background="@drawable/radius_3">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_cube_dialog_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_tmf_horizontal_dialog_layout">
            <TextView
                android:id="@+id/tv_cube_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:textSize="18dp"
                android:textColor="#4A5057"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_cube_dialog_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="#4A5057"
                app:layout_constraintTop_toBottomOf="@id/tv_cube_dialog_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <FrameLayout
                android:id="@+id/fl_cube_dialog_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_cube_dialog_message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/ll_tmf_horizontal_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Button
                android:id="@+id/bt_cube_horizontal_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/tmf_dialog_cancel_button_left_color"
                android:textColor="@color/gray08"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/bt_cube_horizontal_dialog_confirm"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:textColor="@android:color/white"
                android:background="@drawable/tmf_dialog_confirm_button_right_color"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tmf_vertical_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cl_cube_dialog_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Button
                android:id="@+id/bt_cube_vertical_dialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/tmf_dialog_confirm_button_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/bt_cube_vertical_dialog_delete"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/tmf_fail_button_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/bt_cube_vertical_dialog_cancel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/tmf_dialog_cancel_one_button_color"
                android:textColor="@color/gray08"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>